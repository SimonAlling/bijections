{
    "compilerOptions": {
        "declaration": false,
        "experimentalDecorators": true,
        "lib": [
            "esnext",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "target": "es2018",
    },
    "include": [
        "*.ts",
    ],
}
